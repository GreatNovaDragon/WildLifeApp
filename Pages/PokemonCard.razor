@using WildLifeApp.Data
<div class="w3-container w3-cell w3-mobile" style="width: 200px;">
    <div class="w3-card">
        <a href="/Pokemondetails/@pokemon.ID" style="text-decoration: none">
            <img src="@pokemon.ImageLink" style="max-width:100%;
                 max-height:100%;"/>

            <div class="w3-container w3-light-blue">
                <h4>
                    @if (string.IsNullOrEmpty(pokemon.Name_DE))
                    {
                        @pokemon.Name
                    }

                    @pokemon.Name_DE
                    @if (!string.IsNullOrEmpty(pokemon.Form))
                    {
                        var str = $" ({pokemon.Form})";
                        @str
                    }
                </h4>
            </div>

        </a>
    </div>
</div>

@code {

}

@code {

    [Parameter]
    public Pokemon pokemon { get; set; }

}